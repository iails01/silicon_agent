DATABASE_URL=sqlite+aiosqlite:///./agent_platform.db
REDIS_URL=redis://localhost:6379
JWT_SECRET=dev-secret-change-in-production
JWT_ENABLED=false
SKILLKIT_ENABLED=false
DEBUG=true

# LLM Configuration
LLM_API_KEY=your-api-key-here
LLM_BASE_URL=https://api.openai.com
LLM_MODEL=gpt-4o-mini
LLM_TIMEOUT=120.0
EXTRA_SKILL_DIR_WHITELIST=

# SkillKit AgentRunner (reads these env vars via AgentConfig.from_env())
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=your-api-key-here
MINIMAX_MODEL=gpt-4o-mini

# Worker Configuration
WORKER_ENABLED=true
WORKER_POLL_INTERVAL=5.0
WORKER_GATE_POLL_INTERVAL=3.0

# Webhook Secrets (empty = skip signature verification)
JIRA_WEBHOOK_SECRET=
GITLAB_WEBHOOK_SECRET=

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# GitHub Integration (optional, raises API rate limit from 60 to 5000/hr)
GITHUB_TOKEN=

# Memory & Compression
MEMORY_ENABLED=true
MEMORY_COMPRESSION_ENABLED=true
MEMORY_MAX_ENTRIES_PER_CATEGORY=50
MEMORY_MAX_CONTEXT_TOKENS=2000
