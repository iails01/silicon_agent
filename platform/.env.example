DATABASE_URL=sqlite+aiosqlite:///./agent_platform.db
REDIS_URL=redis://localhost:6379
JWT_SECRET=dev-secret-change-in-production
JWT_ENABLED=false
SKILLKIT_ENABLED=false
DEBUG=true

# LLM Configuration
LLM_API_KEY=your-api-key-here
LLM_BASE_URL=https://api.openai.com
LLM_MODEL=gpt-4o-mini
LLM_TIMEOUT=120.0
EXTRA_SKILL_DIR_WHITELIST=

# SkillKit compatibility env vars.
# Platform runtime now derives these from LLM_* for worker/sandbox execution.
# Keep these only for standalone SkillKit/local debugging overrides if needed.
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=your-api-key-here
MINIMAX_MODEL=gpt-4o-mini

# Worker Configuration
WORKER_ENABLED=true
WORKER_POLL_INTERVAL=5.0
WORKER_GATE_POLL_INTERVAL=3.0

# Webhook Secrets (empty = skip signature verification)
JIRA_WEBHOOK_SECRET=
GITLAB_WEBHOOK_SECRET=

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# GitHub Integration (optional, raises API rate limit from 60 to 5000/hr)
GITHUB_TOKEN=

# GitHub Enterprise Integration (e.g. scm.starbucks.com)
GHE_BASE_URL=https://scm.starbucks.com/api/v3
GHE_TOKEN=

# Memory & Compression
MEMORY_ENABLED=true
MEMORY_COMPRESSION_ENABLED=true
MEMORY_MAX_ENTRIES_PER_CATEGORY=50
MEMORY_MAX_CONTEXT_TOKENS=2000

# Workspace: true=worktree, false=tmp clone
WORKTREE_ENABLED=false
WORKTREE_BASE_DIR=/var/lib/silicon_agent/worktrees
# empty => ${WORKTREE_BASE_DIR}/repos
WORKTREE_REPO_CACHE_DIR=

# Container sandbox
SANDBOX_ENABLED=false
SANDBOX_IMAGE=silicon-agent-sandbox:coding
SANDBOX_CPUS=2.0
SANDBOX_MEMORY=4g
SANDBOX_PIDS_LIMIT=256
SANDBOX_NETWORK=sa-sandbox-net
SANDBOX_AGENT_PORT=9090
SANDBOX_READONLY_ROOT=true
SANDBOX_MAX_CONCURRENT=4
SANDBOX_WORKSPACE_BASE_DIR=/tmp/silicon_agent/tasks
SANDBOX_FALLBACK_MODE=graceful
SANDBOX_DUMP_MODEL_API_RESPONSE=true
SANDBOX_MODEL_API_RAW_LOG_HOST_DIR=/tmp/silicon_agent/model_api_logs

# Skill Self-Learning
SKILL_FEEDBACK_ENABLED=true
SKILL_REFLECTION_ENABLED=true
SKILL_REFLECTION_MODEL=
